<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rgokhale.lifestatsapp.moneyChartChooser"
    tools:showIn="@layout/activity_money_chart_chooser">

    <Button
        android:id="@+id/dayChart"
        android:layout_width="135dp"
        android:layout_height="58dp"
        android:text="Day"
        app:layout_constraintBottom_toTopOf="@+id/monthChart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Question" />

    <Button
        android:id="@+id/monthChart"
        android:layout_width="127dp"
        android:layout_height="59dp"
        android:text="Month"
        app:layout_constraintBottom_toTopOf="@+id/yearChart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayChart" />

    <Button
        android:id="@+id/yearChart"
        android:layout_width="125dp"
        android:layout_height="63dp"
        android:text="Year"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monthChart" />

    <TextView
        android:id="@+id/Question"
        android:layout_width="174dp"
        android:layout_height="51dp"
        android:text="Which graph would you like to see?"
        app:layout_constraintBottom_toTopOf="@+id/dayChart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
