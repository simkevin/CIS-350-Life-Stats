<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rgokhale.lifestatsapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".moneySpent"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".pastGoals"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity
            android:name=".charts"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name=".GoalsMain"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name=".pastMoney"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name=".MoneyChart"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity
            android:name=".moneyChartChooser"
            android:label="@string/title_activity_money_chart_chooser"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name=".MonthMoneyChart"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name=".YearMoneyChart"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"
            >

        </activity>
    </application>

</manifest>