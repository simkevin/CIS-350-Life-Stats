<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lifestats.a350s18_21_lifestats">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MoneySpent"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name=".MainActivity" />
        <activity android:name=".AuthenticatorActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".pastGoals"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity
            android:name=".charts"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name=".GoalsMain"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name=".pastMoney"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name=".MoneyChart"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity
            android:name=".moneyChartChooser"
            android:label="@string/title_activity_money_chart_chooser"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name=".MonthMoneyChart"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name=".YearMoneyChart"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"
            >

        </activity>
        <activity android:name=".SleepScreen">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Summary" />
        <activity android:name=".ControlPanelActivity" />
        <activity android:name=".AboutActivity" />
        <activity
            android:name=".QuantitativeDataEntry"
            android:label="@string/title_activity_quantitative_data_entry"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Journal" />
    </application>

</manifest>